{
  "name": "finedlsorter",
  "version": "0.2.0-A",
  "description": "Assist you in keeping your downloads folder organized.",
  "homepage": "https://github.com/BrandonCravener/FineDLSorter",
  "author": {
    "name": "Brandon Cravener",
    "email": "contact@brandoncravener.com"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "start:script": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve:script",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:serve:script": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve --scriptWin",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.3",
    "@angular/animations": "^6.0.6",
    "@angular/cdk": "^6.2.0",
    "@angular/cli": "6.0.8",
    "@angular/common": "6.0.6",
    "@angular/compiler": "6.0.6",
    "@angular/compiler-cli": "6.0.6",
    "@angular/core": "6.0.6",
    "@angular/forms": "6.0.6",
    "@angular/http": "6.0.6",
    "@angular/language-service": "6.0.6",
    "@angular/material": "^6.2.0",
    "@angular/platform-browser": "6.0.6",
    "@angular/platform-browser-dynamic": "6.0.6",
    "@angular/router": "6.0.6",
    "@ngx-translate/core": "10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/auto-launch": "^5.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/electron-config": "^0.2.1",
    "@types/glob": "^5.0.35",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/mime": "^2.0.0",
    "@types/node": "8.9.4",
    "angular-onboarding": "^0.1.2",
    "auto-launch": "^5.0.5",
    "chokidar": "^2.0.4",
    "codelyzer": "4.2.1",
    "core-js": "2.5.6",
    "downloads-folder": "^1.0.1",
    "electron": "2.0.2",
    "electron-builder": "20.14.7",
    "electron-config": "^1.0.0",
    "electron-reload": "1.2.2",
    "es6-promise": "^4.2.4",
    "glob": "^7.1.2",
    "hammerjs": "^2.0.8",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.0",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "material-design-icons-iconfont": "^3.0.3",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "protractor": "5.3.2",
    "rxjs": "6.2.1",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "^2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
